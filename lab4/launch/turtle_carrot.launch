  <launch>
    <node pkg="turtlesim" type="turtlesim_node" name="simulator" output="screen" />
    <node pkg="turtlesim" type="turtle_teleop_key" name="keyboard" output="screen" />

    <node pkg="lab4" type="turtle_tf_broadcaster.py" name="turtle1_tf_broadcaster" output="screen">
      <remap from="input_pose" to="/turtle1/pose" />
      <param name="turtle_tf_name" value="turtle1" />
    </node>

    <node pkg="tf" type="static_transform_publisher" name="turtle1_to_carrot_tf"
          args="0.3 0 0 0 0 0 turtle1 carrot 100" />

    <node pkg="lab4" type="turtle_tf_broadcaster.py" name="turtle2_tf_broadcaster" output="screen">
      <remap from="input_pose" to="/turtle2/pose" />
      <param name="turtle_tf_name" value="turtle2" />
    </node>

    <node pkg="lab4" type="turtle_tf_listener.py" name="turtle2_follow_carrot" output="screen" />

    <node pkg="rviz" type="rviz" name="rviz" output="screen" />
  </launch>
  
